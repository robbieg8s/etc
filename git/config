[color "diff"]
  meta = blue
  func = magenta
[diff]
  noprefix = true
[init]
  defaultBranch = main
[mergetool]
  keepBackup = false
[mergetool "merged"]
  cmd = git mergetool-merged \"${MERGED}\"
  keepBackup = false
  trustExitCode = true
[pull]
  ff = only
[push]
  default = current

# Enable commit and tag signing

[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers

[commit]
  gpgsign = true
[tag]
  gpgsign = true
